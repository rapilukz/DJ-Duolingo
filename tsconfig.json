{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "preserve",
    "target": "es2022",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}